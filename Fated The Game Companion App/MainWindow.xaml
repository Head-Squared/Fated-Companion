    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.RowSpan="3" Background="#FF1E1E1E" CornerRadius="12"></Border>
        <StackPanel x:Name="windowBTNS" Grid.Row="0" HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Top">
            <Button Style="{DynamicResource minBTN}" x:Name="minimizeBTN" Width="40" Height="30" Click="minimizeBTN_Click" Background="Transparent" BorderBrush="Transparent">
                <Path Stroke="White">
                    <Path.Data>
                        <LineGeometry StartPoint="0,12" EndPoint="12,12"/>
                    </Path.Data>
                </Path>
            </Button>
            <Button Style="{DynamicResource normBTN}" x:Name="maximizeBTN" Width="40" Height="30" Click="maximizeBTN_Click" Background="Transparent" BorderBrush="Transparent"></Button>
            <Button Style="{DynamicResource closeBTNtemplate}" x:Name="closeBTN" Width="40" Height="30" Click="closeBTN_Click" Background="Transparent" BorderBrush="Transparent">
                <Path Stroke="White">
                    <Path.Data>
                        <GeometryGroup>
                            <LineGeometry StartPoint="0,0" EndPoint="12,12"/>
                            <LineGeometry StartPoint="0,12" EndPoint="12,0"/>
                        </GeometryGroup>
                    </Path.Data>
                </Path>
            </Button>
        </StackPanel>
        <StackPanel x:Name="mainNavBTNS" Grid.Row="0" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Style="{DynamicResource navigationButtonStyle}" x:Name="rulesetBTN" Click="rulesetBTN_Click">
                <Label x:Name="rulesetBTNContent" Padding="0,8,0,0" FontSize="26" FontFamily="Ami R" FontWeight="Bold" Foreground="White">Ruleset</Label>
            </Button>
            <Button Style="{DynamicResource navigationButtonStyle}" x:Name="tapestriesBTN" Click="tapestriesBTN_Click">
                <Label x:Name="tapestriesBTNContent" Padding="0,8,0,0" FontSize="26" FontFamily="Ami R" FontWeight="Bold" Foreground="White">
                    Tapestries
                </Label>
            </Button>
            <Button Style="{DynamicResource navigationButtonStyle}" x:Name="toolsBTN" Click="toolsBTN_Click">
                <Label x:Name="toolsBTNContent" Padding="0,8,0,0" FontSize="26" FontFamily="Ami R" FontWeight="Bold" Foreground="White">
                    Tools
                </Label>
            </Button>
            <Button Style="{DynamicResource navigationButtonStyle}" x:Name="settingsBTN" Click="settingsBTN_Click">
                <Label x:Name="settingsBTNContent" Padding="0,8,0,0" FontSize="26" FontFamily="Ami R" FontWeight="Bold" Foreground="White">
                    Settings
                </Label>
            </Button>
        </StackPanel>
        <StackPanel x:Name="historyNavBTNS" Grid.Row="0" HorizontalAlignment="Left" Orientation="Horizontal">
            <Button Style="{DynamicResource navigationButtonStyle}" x:Name="homeBTN" Click="homeBTN_Click">
                <Label x:Name="homeBTNContent" Padding="0,8,0,0" FontSize="26" FontFamily="Ami R" FontWeight="Bold" Foreground="White">Home</Label>
            </Button>
        </StackPanel>
        <Canvas x:Name="pageIndicatorCanvas" Grid.Row="1" Height="2">
            <Border x:Name="indicator" Background="Gray" Height="2" Width="50" CornerRadius="1" BorderBrush="Gray" Opacity=".75" Margin="0,0,0,0"/>
        </Canvas>
        <TabControl Style="{DynamicResource noTabPanel}" x:Name="mainContent" Grid.Row="2" BorderThickness="2" Background="#FF2E2E2E" Margin="10,5,10,10">
            <TabItem IsSelected="True" x:Name="mainMenu">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Image Source="/fatedicon.png" Grid.Column="0" Grid.RowSpan="2" SnapsToDevicePixels="True"></Image>
                    <TextBlock Grid.RowSpan="1" Margin="0,0,10,0" Foreground="White" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" TextWrapping="WrapWithOverflow" TextAlignment="Center" FontFamily="Ami R">Welcome to the Fated Companion App!<LineBreak/>Where your fate is more than just a roll of the dice!</TextBlock>

                </Grid>
            </TabItem>
            <TabItem x:Name="rulesetTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="225"></ColumnDefinition>
                        <ColumnDefinition Width="5"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TreeView Style="{DynamicResource mechtreeview}" x:Name="rulesetTree" Grid.Column="0" SizeChanged="rulesetTree_SizeChanged" SelectedItemChanged="rulesetTree_SelectedItemChanged"/>
                    <GridSplitter Width="10" HorizontalAlignment="Stretch" Grid.Column="1" Background="Transparent"/>
                    <DocumentViewer Style="{DynamicResource mechview}" Grid.Column="2" x:Name="mechanicsViewer" VerticalPageSpacing="0" HorizontalPageSpacing="0" BorderBrush="Gray" BorderThickness="1" Margin="0,5,5,5">
                    </DocumentViewer>
                </Grid>
            </TabItem>
            <TabItem x:Name="tapestriesTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Border BorderThickness="0" CornerRadius="10" Margin="10" Grid.Column="0" Background="#FF373737">
                        <ScrollViewer Style="{DynamicResource modernscrollviewer}" Margin="0,5">
                            <StackPanel x:Name="playerCharacterList" Grid.Column="0">
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                    <Border BorderBrush="White" CornerRadius="10" Margin="10" Grid.Column="1" Background="#FF373737">
                        <ScrollViewer Style="{DynamicResource modernscrollviewer}"></ScrollViewer>
                    </Border>
                    <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Button x:Name="newCharBTN" Click="newCharBTN_Click" Foreground="White" FontFamily="Ami R" FontSize="20" Margin="5" VerticalAlignment="Center" Height="50" Width="50" Style="{DynamicResource charInfoBTNS}">NEW</Button>
                        <Button Foreground="White" Margin="5" Width="50" FontFamily="ami r" FontSize="20" Style="{DynamicResource charInfoBTNS}">IMPORT</Button>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem x:Name="toolsTab">
                <Label HorizontalAlignment="Center" VerticalAlignment="Center">Tools</Label>
            </TabItem>
            <TabItem x:Name="settingsTab">
                <Label HorizontalAlignment="Center" VerticalAlignment="Center">Settings</Label>
            </TabItem>
            <TabItem x:Name="charCreator">
                <TabControl>
                    <TabItem x:Name="generalInfoTab" Header="General Info">
                        <TextBox x:Name="nameInput" TextChanged="nameInput_TextChanged"></TextBox>
                    </TabItem>
                    <TabItem x:Name="speciesSelectionTab" Header="Species"></TabItem>
                    <TabItem x:Name="professionSelectionTab" Header="Profession"></TabItem>
                    <TabItem x:Name="attributeRollsTab" Header="Attributes"></TabItem>
                    <TabItem x:Name="inventoryTab" Header="Inventory"></TabItem>
                </TabControl>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
